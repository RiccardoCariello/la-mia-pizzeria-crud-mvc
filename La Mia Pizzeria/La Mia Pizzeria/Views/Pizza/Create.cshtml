@model PizzaModel


<div class="container">

    <h1 class="mb-3" >Aggiungi una nuova Pizza.</h1>

    <form asp-controller="Pizza" asp-action="Create" method="post" class="row g-3">
        @Html.AntiForgeryToken();
        
        <div class="mb-3">
            <label class="form-label"> Name </label>
            <input asp-for="Name" type="text" class="form-control"   id="formGroupExampleInput" placeholder="Example input placeholder">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    
        <div class="mb-3">
            <label for="formGroupExampleInput2" class="form-label"> Description </label>
            <input asp-for="Description" type="text" class="form-control" id="formGroupExampleInput2" placeholder="Another input placeholder">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        
        <div class="mb-3">
            <label for="formGroupExampleInput2" class="form-label"> imgSource </label>
            <input asp-for="ImgSource" type="text" class="form-control" id="formGroupExampleInput2" placeholder="Another input placeholder">
            <span asp-validation-for="ImgSource" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="formGroupExampleInput2" class="form-label"> Price </label>
            <input asp-for="Price" type="text" class="form-control" id="formGroupExampleInput2" placeholder="Another input placeholder">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Salva</button>
    </form>

</div>