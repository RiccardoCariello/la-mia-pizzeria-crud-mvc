@using La_Mia_Pizzeria.Database;

@model List<PizzaModel>;

        <div class="container mt-5 ">
            <div class="row my-5">
                <!--
                <div class="col-12">
                    <h3>Lista delle Pizze</h3>
                </div>
                -->
               
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="row row-cols-1 row-cols-md-2 g-4 ">
                
                        
                        
                        <div class="col h-100 w-50 p-3 h-auto d-inline-block ">
                            <div class=" card text-bg-dark mb-3 text-center h-100">
                                <img src="~/img/Pepperoni.jpg" class="card-img-top square" alt="pizza coi peperoni">
                                <div class="card-body ">
                                    <h5 class="card-title">Pizza "El Pepperon"</h5>
                                    <p class="card-text ">Questa pizza è un'autentica esplosione di sapore per gli amanti del piccante. La base di pizza, sottile e croccante, è generosamente condita con salsa di pomodoro, mozzarella filante e una varietà di peperoni colorati tagliati a fette sottili. Dai peperoni dolci ai piccanti, questa pizza offre un mix equilibrato di sapori intensi e una nota piccante che accenderà le tue papille gustative. 
                                        Una scelta perfetta per gli amanti del gusto audace e del carattere vibrante dei peperoni.</p>
                                </div>
                                <div class="card-footer bg-transparent border-dark">Prezzo : 15.00€</div>
                            </div>
                        </div>
                        <div class="col h-100 w-50 p-3 h-auto d-inline-block">
                            <div class="card text-bg-dark mb-3 text-center h-100">
                                <img src="~/img/LaDafona.jpg" class="card-img-top square" alt="pizza cafona">
                                <div class="card-body">
                                    <h5 class="card-title">Pizza "La Cafona"</h5>
                                    <p class="card-text ">
                                        Pizza "Tutti i Gusti":
                                        Questa pizza è un vero tripudio di sapori che soddisferà ogni desiderio culinario. La base di pizza, sottile e croccante, è ricoperta di una deliziosa salsa di pomodoro e abbondante mozzarella filante. Ogni morso offre un'esplosione di gusti unici: peperoni colorati, funghi freschi, cipolle caramellate, olive nere, prosciutto, salsiccia piccante e ananas dolce. Una combinazione perfetta tra dolce e salato, piccante e delicato, che si fonde in un tripudio di sapori in armonia. Questa pizza è un vero piacere per gli amanti della varietà e della soddisfazione culinaria.
                                    </p>
                                </div>
                                <div class="card-footer bg-transparent border-dark">Prezzo : 20.00€</div>
                            </div>
                        </div>
                        <div class="col h-100 w-50 p-3 h-auto d-inline-block">
                            <div class="card text-bg-dark mb-3 text-center h-100">
                                <img src="~/img/PizzaDelicious.jpg" class="card-img-top square" alt="pizza deliziosa">
                                <div class="card-body">
                                    <h5 class="card-title">Pizza Delicious</h5>
                                    <p class="card-text ">Questa gustosa pizza si ispira alla bellezza dei sapori mediterranei. La croccante base di pizza è ricoperta di pomodoro fresco e mozzarella di bufala, arricchita con olive nere, pomodorini confit, feta sbriciolata e una spruzzata di origano. Un viaggio delizioso tra i gusti intensi e profumati della costa mediterranea.</p>
                                </div>
                                <div class="card-footer bg-transparent border-dark">Prezzo : 15.00€</div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
